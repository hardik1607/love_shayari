<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.pencil">

    <LinearLayout
        android:id="@+id/pencil_linear"
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shayary_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pencil_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="hello"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pencil_reload"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/reload"/>

        <Space
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>

        <ImageView
            android:id="@+id/pencil_expand"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/expand"/>

        <Space
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>

        <ImageView
            android:id="@+id/pencil_download"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/download"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pencil_background"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Background"
            android:textSize="@dimen/_10sdp"/>

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"/>

        <Button
            android:id="@+id/pencil_textcolor"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Text Color"
            android:textSize="@dimen/_10sdp"/>

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"/>

        <Button
            android:id="@+id/pencil_share"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Share"
            android:textSize="@dimen/_10sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pencil_font"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Font"
            android:textSize="@dimen/_10sdp"/>

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"/>

        <Button
            android:id="@+id/pencil_emoji"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Emoji"
            android:textSize="@dimen/_10sdp"/>

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"/>

        <Button
            android:id="@+id/pencil_textsize"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Text Size"
            android:textSize="@dimen/_10sdp"/>

    </LinearLayout>
</LinearLayout>